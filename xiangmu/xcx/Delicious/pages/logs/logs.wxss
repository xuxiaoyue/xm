.product{
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  width: 100%;
}
.nav-left{
  width: 10%;
  display: flex;
  flex-direction: column;
  font-size: 14px;
  background-color: #fff;
}
.nav-left view{
  width: 100%;
  height: 300rpx;
   display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
 
  border:1px solid #ccc;
  border-bottom: 0px;
}
.nav-left view:nth-child(3){
  border-bottom: 1px solid #ccc;
}